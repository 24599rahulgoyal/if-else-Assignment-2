import java.util.Scanner;
class Discount{
 public static void main(String[] args){
  Scanner sc = new Scanner(System.in);
  System.out.println("Enter the total number of units - ");
  int q = sc.nextInt();
  int p = q*100;
  
  if(p >= 1000){
	int c = p - (p*10)/100;
	
	System.out.println("Total cost after discount -> " + c);
}
  else{
	System.out.println("Total cost -> " + p);
}
  

}
}
